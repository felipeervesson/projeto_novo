        function validar() {
            var nome = document.forms["formulario"]["nome"].value;
            var sobrenome = document.forms["formulario"]["sobrenome"].value;
            var rg = document.forms["formulario"]["rg"].value;
            var password = document.forms["formulario"]["password"].value;
            var repetir_password = document.forms["formulario"]["repetir_password"].value;
            
            if (nome == "") {
                alert('Preencha o campo com seu nome');
                formulario.nome.focus();
                return false;
            }
            if (sobrenome == "") {
                alert('Preencha o campo com seu sobrenomee');
                formulario.nome.focus();
                return false;
            }
            

            alert("Cadastrado com Sucesso!!!");
        }
